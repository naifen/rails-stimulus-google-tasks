<div id="login">
  <div class="columns is-centered">
    <div class="column is-half">
      <div class="box" id="login-form">
        <%= form_with model: @user_session do |f| %>
          <% if @user_session.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@user_session.errors.count, "error") %> prohibited:</h2>
              <ul>
                <% @user_session.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="field">
            <p class="control has-icons-left">
              <%= f.text_field :username,
                class: "input is-medium",
                id: "login-form-username",
                placeholder: "Email, username or phone number" %>
              <span class="icon is-small is-left">
                <i class="fas fa-user"></i>
              </span>
            </p>
          </div>
          <div class="field">
            <p class="control has-icons-left">
              <%= f.password_field :password,
                class: "input is-medium",
                id: "login-form-password",
                placeholder: "Password" %>
              <span class="icon is-small is-left">
                <i class="fas fa-key"></i>
              </span>
            </p>
          </div>
          <div class="field">
            <div class="control">
              <%= f.check_box :remember_me,
                { id: "login-form-remember" },
                checked_value = true, unchecked_value = false %>
              <%= f.label "remember me", for: "login-form-remember" %>
            </div>
          </div>
          <div class="field">
            <p class="control">
              <%= f.submit "Log in",
                class: "button is-primary is-rounded is-medium is-fullwidth",
                data: { disable_with: "Loading ..." } %>
            </p>
          </div>
        <% end %>
      </div>

      <div class="columns">
        <div class="column is-half">
          <div class="content has-text-centered">
            <%= link_to "Create a new account", signup_path %>
          </div>
        </div>
        <div class="column is-half">
          <div class="content has-text-centered">
            <%= link_to "Forgot your password?", signup_path %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

